{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/go-rest-apis/users-crud-operations-data-driven.spec.ts",
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "--loader",
                "ts-node/esm",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
    ]
}